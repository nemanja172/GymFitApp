<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="100dp"
    android:layout_marginTop="50dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".HomeFragment">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/orange_dark"
            android:layout_marginTop="40dp"
            android:text="Dobrodošli"/>

        <TextView
            android:layout_below="@+id/welcome"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:layout_marginTop="40dp"
            android:text="Uporabnik"/>

        <TextView
            android:layout_below="@+id/name"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/email"/>

        <TextView
            android:layout_below="@+id/email"
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginTop="80dp"
            android:text="GymFit - aplikacija sa katero se doseže večja uporaba terminov in se omogoča trening v različnih objektih v celi državi. Sistem omogoča najlažji dostop do vseh najljubših športnih centrov."/>

        <ImageView
            android:layout_below="@+id/text"
            android:id="@+id/slika"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50sp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"
            android:contentDescription="@string/description"/>


    </RelativeLayout>
</ScrollView>